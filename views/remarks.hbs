{{> header}}

<div class="row col-md-12 col-sm-12 col-12" id="remarks" style="display: none">
    <form action="#" id="review-form" method="post">
        <div class="row">
            <label for="review-form-tema-inp" class="col-sm-4 col-form-label">ID товара: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="review-form-tema-inp" autofocus="autofocus">
            </div>
        </div>
        <div class="row">
            <label for="review-form-text-inp" class="col-sm-4 col-form-label">Отзыв: </label>
            <div class="col-sm-10 contact-form-cell">
                <textarea name="" id="review-form-text-inp" cols="60" rows="5" class="form-control"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-2 contact-form-cell"></div>
            <div class="col-10 reg-button-container contact-form-cell">
                <button class="btn btn-primary" id="btn-primary" type="submit">Отправить</button>
            </div>
        </div>
    </form>
</div>
<div style="display: none" id="err"><a href="avtoriz">Войдите</a>, чтобы оставить отзыв</div>

<script src="js/remarks.js"></script>